<?xml version="1.0"?>

<beans default-destroy-method="destroy" default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Listeners -->

	<bean id="messageListener.weather_listener"
		class="com.vh.portlet.weather.WeatherMessagingImpl" />
	<bean id="messageListener.exchangerate_listener"
		class="com.insults.portlet.exchangerate.ExchangeRateMessagingImpl" />

	<!-- Destinations -->
	
	<bean id="shop.info" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<property name="name" value="shop/info" />
	</bean>

	<!-- Configurator -->
	
	<bean id="messagingConfigurator"
		class="com.liferay.portal.kernel.messaging.config.PluginMessagingConfigurator">
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="shop/info">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.weather_listener" />
						<ref bean="messageListener.exchangerate_listener" />
					</list>
				</entry>
			</map>
		</property>
		<property name="destinations">
			<list>
				<ref bean="shop.info" />
			</list>
		</property>
	</bean>
</beans>